
<div class="card">
    <header class="card-header">

    <div class="column">
        <p>
        <a href="/post/{{id}}">{{title}}</a>
        </p>
    </div>

    <div class="column">
        <span class=""> </span>
    </div>

    
    </header>

    <div class="card-content">
        <div class="content">
            {{post_content}}
        </div>
        <div>
            <b>{{user.username}}</b> |
            <a href="https://twitter.com/{{user.twitter}}">Twitter</a> |
            <a href="https://github.com/{{user.github}}">Github</a> |
           <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        
        </div>
    
</div>