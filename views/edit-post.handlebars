
<article>
    <a href="/dashboard"> &lAarr; back to dashboard </a>
    <h2 class="title">edit post</h2><hr>
    <form class="edit-post-form">
        <div>
            <label for="post-title">post title:</label>
            <input class="input" type="text" name="post-title" value="{{post.title}}">
        </div>
        <div>
        <label for="post-content">post content:</label>
        <input class="textarea" type="text" name="post-content" value="{{post.post_content}}">
        </div>
        <div>
            created by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit" class="button">save post</button>
        <button type="button" class="button">delete post</button>
    </form>
</article>

{{> comments post.comments}}

<script src="/public/js/edit-post.js"></script>
<script src="/public/js/delete-post.js"></script>
<script src="/public/js/comment.js"></script>
